<Page x:Class="WhisperClient.Pages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WhisperClient.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="LandingPage"
      FontFamily="JetBrains Mono">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Column="0"
               Grid.ColumnSpan="3"
               Content="W H I S P E R"
               HorizontalContentAlignment="Center"
               FontSize="64"
               Width="800"
               HorizontalAlignment="Center"
               Foreground="White" />

        <Button  Grid.Row="1"
                 Grid.Column="1"
                 Content="Register" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="Login" />
    </Grid>
</Page>
