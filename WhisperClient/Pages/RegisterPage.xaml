<Page x:Class="Whisper.Client.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Whisper.Client.Pages"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignWidth="400"
      Title="RegisterPage">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    Margin="20, 15, 20, 20">
            <TextBlock Style="{DynamicResource MaterialDesignTextBlock}"
                       HorizontalAlignment="Center"
                       FontSize="18">Create a new account</TextBlock>

            <TextBox Margin="0,15,0,0"
                     x:Name="txtUsername"
                     Width="300"
                     FontSize="18"
                     materialDesign:HintAssist.Hint="Username"
                     BorderThickness="2"
                     BorderBrush="{DynamicResource MaterialDesignDivider}"
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     KeyDown="textBox_KeyDown" />

            <TextBox Margin="0,15,0,0"
                     x:Name="txtEmail"
                     Width="300"
                     FontSize="18"
                     materialDesign:HintAssist.Hint="Email"
                     BorderThickness="2"
                     BorderBrush="{DynamicResource MaterialDesignDivider}"
                     Style="{StaticResource MaterialDesignFilledTextBox}"
                     KeyDown="textBox_KeyDown" />


            <PasswordBox Margin="0,15,0,0"
                         x:Name="txtPassword"
                         Width="300"
                         FontSize="18"
                         materialDesign:HintAssist.Hint="Password"
                         BorderThickness="2"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignFilledPasswordBox}"
                         KeyDown="textBox_KeyDown" />

            <PasswordBox Margin="0,15,0,0"
                         x:Name="txtPasswordConfirm"
                         Width="300"
                         FontSize="18"
                         materialDesign:HintAssist.Hint="Confirm Password"
                         BorderThickness="2"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignFilledPasswordBox}"
                         KeyDown="textBox_KeyDown" />


            <Button Margin="0,15,0,0"
                    x:Name="registerButton"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    Height="50"
                    Width="300"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    FontSize="18"
                    Content="Create account"
                    Click="registerButton_Click"></Button>


            <Button Margin="0,15,0,0"
                    x:Name="loginButton"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    Height="50"
                    Width="300"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    FontSize="18"
                    Content="Log in"
                    Click="loginButton_Click"></Button>

            <ProgressBar Margin="0, 20, 0 ,0"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         x:Name="progressBar" />

        </StackPanel>
    </Grid>
</Page>
